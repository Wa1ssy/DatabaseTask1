@model List<DatabaseTask.Core.Domain.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<!-- Button to fetch employees -->
<form asp-action="GetEmployees">
    <button type="submit" class="btn btn-primary">Get All Employees</button>
</form>

<!-- Table to display employees -->
@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found.</p>
}       